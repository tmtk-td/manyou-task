
<h1>Tasks</h1>


<%= form_with url:'/tasks', method: :get, local: true do |f| %>
  <%= f.label :name_key, 'Search name' %>
  <%= f.text_field :name_key %>
  <%= f.label :completed %>
  <%= f.select :completed, [["未着手", "未着手"], ["着手中", "着手中"], ["完了", "完了"]], include_blank: "選択して下さい" %>
  <%= f.submit 'Search' %> <%= link_to 'Clear', tasks_path %>
<% end %>

<%= link_to "終了期限迫ってる順", tasks_path(sort_expired: "true") %>
<%= link_to "優先順位高い順", tasks_path(sort_priority: "true") %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Detail</th>
      <th>Deadline</th>
      <th>Completed</th>
      <th>Priority</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr class = 'task_row'>
        <td><%= task.name %></td>
        <td><%= task.detail %></td>
        <td><%= task.deadline %></td>
        <td><%= task.completed %></td>
        <td><%= task.priority %></td>
      
      
      

        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      
    <% end %>
    <%= paginate @tasks %>
  </tbody>
</table>
<br>

<%= link_to 'New Task', new_task_path %>
